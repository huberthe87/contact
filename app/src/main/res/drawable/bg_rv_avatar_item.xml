<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_selected="true">
    <shape xmlns:android="http://schemas.android.com/apk/res/android"
           android:shape="oval"
           android:useLevel="false">
      <stroke
        android:width="5dp"
        android:color="#BFEFFF"/>
      <padding
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp"/>
    </shape>
  </item>
  <item android:state_selected="false">
    <shape xmlns:android="http://schemas.android.com/apk/res/android"
           android:shape="oval"
           android:useLevel="false">
      <stroke
        android:width="5dp"
        android:color="#BEBEBE"/>
      <padding
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp"/>
    </shape>
  </item>
</selector>
